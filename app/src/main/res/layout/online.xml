<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@null"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/backGround_online"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:adjustViewBounds="false"
        android:src="@drawable/main_online" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/character_online"
        android:src="@drawable/character_anim"
        android:scaleType="fitEnd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/main_send"
        android:background="@drawable/ic_online"
        android:layout_marginTop="44dp"
        android:layout_alignTop="@+id/character_online"
        android:layout_toLeftOf="@+id/receive_answer"
        android:layout_toStartOf="@+id/receive_answer"
        android:layout_marginRight="30dp" />

    <Button
        android:layout_width="75dp"
        android:layout_height="150dp"
        android:id="@+id/receive_answer"
        android:background="@drawable/ic_receive"
        android:layout_alignTop="@+id/character_online"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="150dp"
        android:id="@+id/receive_question"
        android:background="@drawable/ic_bottle"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="39dp"
        android:layout_alignBottom="@+id/main_send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fish_online"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="189dp" />
</RelativeLayout>
